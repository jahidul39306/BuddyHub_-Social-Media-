@model BuddyHub.Models.VirtualModel.ChangePassData
@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>
<form action="" method="post" >
     New password: <input type="password" name="Password" value="@Model.Password" class="form-control"/>
     @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
     <br />
     Confirm password: <input type="password" name="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control"/>
     @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
     <br />
    <input type="submit" name="submit" value="Change password" class="btn btn-success" />
</form>
